<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnOne" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnTwo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnThree" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnFour" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnFive" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="155dp"
                android:layout_weight="1"
                android:onClick="click"
                android:text="@string/home_btnSix" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/home_Recommend"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:layout_marginLeft="63.5dp"
            android:background="@drawable/home_recommend"
            android:onClick="click" />

        <Button
            android:id="@+id/home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="63.5dp"
            android:background="@drawable/home_focus"
            android:onClick="click" />

        <Button
            android:id="@+id/home_Setting"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="63.5dp"
            android:background="@drawable/home_setting"
            android:onClick="click" />
    </LinearLayout>
</LinearLayout>