<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnOne" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnTwo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnThree" />

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnFour" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnFive" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:onClick="click"
                android:text="@string/home_btnSix" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/line" />

    <LinearLayout
        android:id="@+id/home_Recommends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">
        <!--推荐-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_Recommend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_recommend" />

            <TextView
                android:id="@+id/recommend_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home_recommend"
                android:textColor="@color/home_tips"
                android:textSize="7pt" />
        </LinearLayout>
        <!--主页-->
        <LinearLayout
            android:id="@+id/homes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_focus" />

            <TextView
                android:id="@+id/home_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home"
                android:textColor="@color/home_tipsFocus"
                android:textSize="7pt" />
        </LinearLayout>
        <!--个人信息-->
        <LinearLayout
            android:id="@+id/home_Settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_Setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/home_setting" />

            <TextView
                android:id="@+id/setting_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/home_setting"
                android:textColor="@color/home_tips"
                android:textSize="7pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>